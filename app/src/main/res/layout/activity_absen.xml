            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/btnRefreshMaps"
                android:layout_marginBottom="10dp"
                android:background="#bfbfbf" />

            <Button
                android:id="@+id/buttonCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view4"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_download_all"
                android:text="Check In"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/btnRefreshMaps"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/llimgview"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_download_all"
                android:text="Refresh Location"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/viewMap"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/btnRefreshMaps"
                android:background="@drawable/btn_download_all"
                android:text="View location on Map"
                android:textColor="#FFF" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
