            <!--<ImageView-->
            <!--android:id="@+id/imageViewCamera2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@mipmap/ic_maps_local_see" />-->
