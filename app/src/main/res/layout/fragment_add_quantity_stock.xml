<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_quantityStock"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lnQuantity"
        android:padding="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No SO"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txtNoQuantity"
            android:layout_below="@+id/txtQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No SO"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>
        <View
            android:id="@+id/view1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtNoQuantity"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />

        <TextView
            android:id="@+id/txtDateQuantity"
            android:layout_below="@id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txtviewDateQuantity"
            android:layout_below="@+id/txtDateQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>
        <View
            android:id="@+id/view2"
            android:layout_below="@+id/txtviewDateQuantity"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#bfbfbf" />

        <TextView
            android:id="@+id/txtKet_quantity"
            android:layout_below="@id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/etKeterangan_quantity"
            android:layout_below="@+id/txtKet_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_edtext"
            android:drawableRight="@mipmap/ic_action_assignment">

            <requestFocus />
        </EditText>
        <View
            android:id="@+id/view3"
            android:layout_below="@+id/etKeterangan_quantity"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#bfbfbf" />
        <Button
            android:id="@+id/btnAddQuantity"
            android:layout_below="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Add Product"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/back_splash"/>

        <View
            android:id="@+id/view4"
            android:layout_below="@+id/btnAddQuantity"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#bfbfbf" />
        <Button
            android:id="@+id/btnPreviewQuantity"
            android:layout_below="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Preview"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_download_all"/>



    </LinearLayout>
</ScrollView>
