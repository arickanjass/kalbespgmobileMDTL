<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.kalbenutritionals.app.kalbespgmobile.FragmentAbsen" >



    <ScrollView
        android:id="@+id/scrollViewABsen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Branch :"
                android:textColor="#000" />
            <TextView
                android:id="@+id/txtHDId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txthdId"
                android:visibility="gone" />
            <!--<Spinner
                android:id="@+id/spnType"
                android:layout_below="@+id/tvBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_edtext"/>-->
            <EditText
                android:id="@+id/etBranch"
                android:background="@drawable/bg_edtext"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:layout_below="@+id/tvBranch"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/etBranch"
                android:layout_marginTop="10dp"
                android:background="#bfbfbf" />
            <TextView
                android:id="@+id/tvOutlet"
                android:layout_below="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Outlet :"
                android:textColor="#000"/>
            <!--<Spinner
                android:id="@+id/spnOutlet"
                android:layout_below="@+id/tvOutlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_edtext" />-->
            <EditText
                android:id="@+id/etOutlet"
                android:background="@drawable/bg_edtext"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/tvOutlet"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/etOutlet"
                android:layout_marginTop="10dp"
                android:background="#bfbfbf" />
            <TextView
                android:id="@+id/txtKet_visitPlan"
                android:layout_below="@id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tvDesc"
                android:layout_below="@id/txtKet_visitPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Description :"
                android:textColor="#000"
                android:background="@drawable/bg_edtext"/>
            <View
                android:id="@+id/viewDsc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvDesc"
                android:layout_marginTop="10dp"
                android:background="#bfbfbf" />
            <TextView
                android:id="@+id/txtDesc"
                android:layout_below="@id/viewDsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description Reply :"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_description_visit_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDesc">

                <EditText
                android:id="@+id/et_desc_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:background="@drawable/bg_edtext"
                android:drawableRight="@mipmap/ic_action_assignment"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/input_layout_description_visit_plan"
                android:layout_marginTop="10dp"
                android:background="#bfbfbf" />

            <android.support.v7.widget.CardView
                android:id="@+id/tlAbesen2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp">
                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tlAbesen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:background="#4CAF50"
                        android:padding="5dp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Your Position"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="Outlet Position"
                            />
                    </TableRow>

                    <TableRow
                        android:background="#ffffff"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Long" />
                        <TextView
                            android:id="@+id/tvLong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="" />
                        <TextView
                            android:id="@+id/tvLongOutlet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="" />
                    </TableRow>
                    <TableRow
                        android:background="#ffffff"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lat" />
                        <TextView
                            android:id="@+id/tvLat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="" />
                        <TextView
                            android:id="@+id/tvlatOutlet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="" />
                    </TableRow>
                    <TableRow
                        android:background="#ffffff"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Acc" />
                        <TextView
                            android:id="@+id/tvAcc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="" />
                    </TableRow>
                    <TableRow
                        android:background="#ffffff"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            />
                    </TableRow>
                </TableLayout>
            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tlAbesen2"
                android:layout_marginTop="10dp"
                android:background="#bfbfbf" />

            <android.support.v7.widget.CardView
                android:id="@+id/llimgview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp">

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tlAbesen3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4CAF50"
                        android:gravity="center_horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Images"
                            android:textAlignment="center" />
                    </TableRow>


                    <TableRow
                        android:background="#ffffff"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Image 1"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Image 2"
                            android:textAlignment="center" />

                    </TableRow>

                    <TableRow
                        android:background="#ffffff"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imageViewCamera1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@mipmap/ic_maps_local_see" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imageViewCamera2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@mipmap/ic_maps_local_see" />
                        </LinearLayout>

                    </TableRow>
                </TableLayout>
            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bfbfbf"
                android:layout_below="@+id/btnRefreshMaps"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/buttonCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Check In"
                android:background="@drawable/btn_download_all"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view4" />

            <Button
                android:id="@+id/btnRefreshMaps"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Refresh Location"
                android:textColor="#FFF"
                android:background="@drawable/btn_download_all"
                android:layout_below="@+id/llimgview"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/viewMap"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="View Location on Map"
                android:textColor="#FFF"
                android:background="@drawable/btn_download_all"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btnRefreshMaps" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
